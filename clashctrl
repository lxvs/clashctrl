#!/bin/bash
set -o nounset

switch_help () {
cat <<EOF
usage: clashctrl switch <proxy>

Switch current GLOBAL proxy to <proxy>.
EOF
}

switch_op () {
    local proxy
    case $# in
    1)
        proxy="$1"
        ;;
    *)
        >&2 printf "error: 'switch' takes 1 argument.\n"
        return 1
        ;;
    esac
    curl -sS -X PUT \
        -H "Content-Type: application/json" \
        127.0.0.1:9090/proxies/GLOBAL \
        -d "{\"name\": \"$proxy\"}"
}

Version () {
cat <<EOF
clashctrl $version
$ghlink
EOF
}

Help () {
cat <<EOF
usage:
    clashctrl <operation> [<argument> ...]
    clashctrl -h | --help
    clashctrl -v | --version

operation:
    switch          switch current GLOBAL proxy
    get             (yet to implement) get current GLOBAL proxy
    getall          (yet to implement) get all proxies
    curl            (yet to implement) custom curl

Use clashctrl <operation> --help for more about <operation>.
EOF
}

TryToHelp () {
    while test $# -ge 1
    do
        case "$1" in
        -h|--help)
            ${op}_help
            exit 0
            ;;
        *)
            shift
            ;;
        esac
    done
}

main () {
    local op
    readonly version='0.0.1'
    readonly ghlink='https://github.com/lxvs/clashctrl'
    if test $# -eq 0
    then
        Help
        exit 0
    fi
    op="$1"
    shift
    case "$op" in
    -v|--version|version)
        Version
        exit 0
        ;;
    -h|--help|help)
        Help
        exit 0
        ;;
    switch)
        TryToHelp "$@"
        ${op}_op "$@"
        ;;
    *)
        >&2 printf "error: invalid operation: %s\n" "$op"
        exit 1
        ;;
    esac
}

main "$@"
